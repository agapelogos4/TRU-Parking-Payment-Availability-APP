<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- This is for the buttons found in the settings page -->
    <style name="SettingsButtonStyle">
        <item name="android:background">@drawable/settings_button_background</item>

        <!-- text and the button -->
        <item name="android:textColor">?attr/colorButtonText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">18sp</item>

        <!-- remove weird shadow bug -->
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <!-- this is for the top button found in the settings page it rounds the corners -->
    <style name="SettingsTopButtonStyle">
        <item name="android:background">@drawable/button_top_rounded</item>

        <!-- text and the button -->
        <item name="android:textColor">?attr/colorButtonText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">18sp</item>

        <!-- remove the weird shadow bug -->
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">?attr/colorText</item>
    </style>

    <style name="LangaugeText">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">?attr/colorBackground</item>
    </style>

    <style name="DarkBlueBackground">
        <item name="android:background">?attr/colorBackground</item>
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <style name="DayPassIndicator">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:backgroundTint">?attr/dayPassColor</item>
        <item name="android:background">@android:color/white</item> <!-- fallback -->
        <item name="android:shape">rectangle</item>
    </style>

    <style name="MultiPassIndicator">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:backgroundTint">?attr/multiDayPassColor</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:shape">rectangle</item>
    </style>



</resources>