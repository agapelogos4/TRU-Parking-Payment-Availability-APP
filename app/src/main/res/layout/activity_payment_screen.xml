<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PaymentScreen">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="397dp"
        android:layout_height="118dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_selected_space_rounded"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/confirmText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Your Selection"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/parkingLotText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Parking Lot:" />

            <TextView
                android:id="@+id/durationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Duration:" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/confirmText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="35dp"
                android:text="Lot N"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/durationSpinner"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner_text_background"

                android:spinnerMode="dropdown"
                android:textAlignment="center" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="397dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        android:background="@drawable/bg_selected_space_rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/paymentInformationHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_credit_card_24"
            android:text="Payment Information"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/emailAddressHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:text="Email Address"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/emailAddressInputField"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="your@email.com"
            android:paddingStart="8dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_edittext_bg"/>

        <TextView
            android:id="@+id/cardNumberHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:text="Card Number"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/cardNumberInputField"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="1234 5678 9012 3456"
            android:paddingStart="8dp"
            android:inputType="number"
            android:background="@drawable/rounded_edittext_bg"/>

        <TextView
            android:id="@+id/cardholderNameHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:text="Cardholder Name"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/cardholderNameInputField"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="John Doe"
            android:paddingStart="8dp"
            android:inputType="number"
            android:background="@drawable/rounded_edittext_bg"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ExpiryMonthHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry Month"
                android:layout_marginTop="10dp"
                android:layout_marginStart="2dp"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/ExpiryYearHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry Year"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/CVVHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CVV"
                android:layout_marginTop="10dp"
                android:layout_marginStart="50dp"
                android:textSize="15dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_bg"
                android:layout_marginTop="5dp"/>

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_bg"
                android:layout_marginTop="5dp"
                android:layout_marginStart="25dp"/>

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_bg"
                android:layout_marginTop="5dp"
                android:layout_marginStart="25dp"/>
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="230dp"
                android:textSize="20dp"
                android:text="$5.40"
                android:layout_marginTop="15dp"/>


        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/payButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay Now"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            app:icon="@drawable/baseline_lock_outline_24"
            app:iconTint="@android:color/white"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:backgroundTint="#000000"
            app:cornerRadius="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/applePayButton"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="Pay"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                app:icon="@drawable/apple_logo_svgrepo_com"
                app:iconPadding="0dp"
                app:iconSize="15dp"
                app:iconGravity="textStart"
                app:backgroundTint="#FFFFFF"
                app:iconTint="@color/black"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/googlePayButton"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="Pay"
                android:layout_marginTop="10dp"
                android:layout_marginStart="50dp"
                android:textColor="@android:color/black"
                app:icon="@drawable/google_icon_logo_svgrepo_com"
                app:iconPadding="3dp"
                app:iconSize="15dp"
                app:iconGravity="textStart"
                app:iconTint="@null"
                app:backgroundTint="#FFFFFF"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/PaypalButton"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text=""
                android:layout_marginTop="10dp"
                android:layout_marginStart="50dp"
                android:textColor="@android:color/white"
                app:icon="@drawable/paypal_svgrepo_com"
                app:iconPadding="3dp"
                app:iconSize="25dp"
                app:iconGravity="textEnd"
                app:iconTint="@null"
                app:backgroundTint="#FFFFFF"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp" />


        </LinearLayout>




    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>