<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

        <TextView
            android:id="@+id/accountInfoHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Information"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"
            android:textColor="?attr/colorText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/userNameText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="18sp"
                android:textColor="?attr/colorText"/>

            <ImageButton
                android:id="@+id/editUserNameButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Edit Username"
                android:src="@drawable/edit_icon"
                android:scaleType="center" />

        </LinearLayout>

        <TextView
            android:id="@+id/userPreferencesHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Preferences"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"
            android:textColor="?attr/colorText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Remember me on sign-in"
                android:textSize="16sp"
                android:textColor="?attr/colorText"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/toggleRememberUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:thumbTint="?attr/colorText"
                app:trackTint="#808080"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Receive emailed receipts"
                android:textSize="16sp"
                android:textColor="?attr/colorText"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/toggleEmailReceipts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:thumbTint="?attr/colorText"
                app:trackTint="#808080"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Remember payment information"
                android:textSize="16sp"
                android:textColor="?attr/colorText"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/toggleRememberPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:thumbTint="?attr/colorText"
                app:trackTint="#808080"/>

    </LinearLayout>
</LinearLayout>
